layout (location = 0) in vec3 VS_IN_Position;

// ------------------------------------------------------------------
// OUTPUT VARIABLES  ------------------------------------------------
// ------------------------------------------------------------------

out vec3 FS_IN_WorldPos;

// ------------------------------------------------------------------
// UNIFORMS  --------------------------------------------------------
// ------------------------------------------------------------------

uniform mat4 u_Projection;
uniform mat4 u_View;

// ------------------------------------------------------------------
// MAIN  ------------------------------------------------------------
// ------------------------------------------------------------------

void main(void)
{
    FS_IN_WorldPos = VS_IN_Position;
    gl_Position =  u_Projection * u_View * vec4(VS_IN_Position, 1.0);
}

